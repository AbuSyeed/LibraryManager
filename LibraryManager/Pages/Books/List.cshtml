@page
@model LibraryManager.Pages.Books.ListModel
@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<form method="get">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search this blog" asp-for="SearchTerm">
        <div class="input-group-append">
            <button class="btn btn-secondary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var book in Model.Books)
    {
        <tr>
            <td>
                <div>
                    @book.Title
                </div>
                <div>
                    @book.BookGenre
                </div>
            </td>
            <td></td>
        </tr>

    }
</table>